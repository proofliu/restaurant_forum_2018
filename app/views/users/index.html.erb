<div class="container">
  <div class="row">
    
    <div class="col-md-12">
      <div class="page-header">
        <h1>美食達人</h1>
      </div>
    </div>
    
    <% @users.each do |user| %>
      <div class="col-md-3 text-center user-item">
        <%= link_to user_path(user) do %>
          <%= image_tag(user.avatar, class: "img-rounded") %>
          <h4><%= user.name %></h4>
        <% end %>
        <%= render partial: "shared/follow", locals: {user: user} %>
        <%= link_to 'Friend', friendships_path(friend_id: user), method: :post %>
      </div>
    <% end %>

  </div>
</div>