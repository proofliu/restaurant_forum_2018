<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">

      <h3>Edit Profile</h3>

      <%= form_for @user do |f| %>
        <!-- form 中每個元件用 "form-group" 包起來 -->
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :intro, "自我介紹" %>
          <%= f.text_area :intro, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :avatar, "大頭照上傳" %>
          <%= image_tag @user.avatar, width: '50px' if @user.avatar %>
          <%= f.file_field :avatar %>
        </div>
        <div class="form-group">
          <%= f.submit "Update", class:"btn btn-primary" %>
          <%= link_to "Cancel", user_path(@user), class:"btn btn-default" %>
        </div>
      <% end %>

    </div>
  </div>
</div>