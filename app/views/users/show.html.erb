<div class="container">
  <div class="row">
    <!--  前後各空一行 -->
    <div class="col-md-10 col-md-offset-1">
      
      <!-- 用 page-header(bootstrap) 裝 User profile-->
      <div class="page-header">
          
          <div class="col-md-3">
            <%= image_tag @user.avatar, class:"img-responsive" %>
          </div>

          <div class="col-md-7">
            <h2><%= @user.name %></h2>
            <p><strong><%= @user.email %></strong></p>
            <div><%= simple_format @user.intro %></div>
            <% if @user.email == current_user.email %>
              <%= link_to "Edit Profile", edit_user_path(@user), class:"btn btn-primary" %>
            <% end %>
          </div>
          <!-- clearfix 怎麼放要再研究 -->
          <div class="clearfix"></div>

      </div>
      <br>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><%= "#{@commented_restaurants.count} 已評論餐廳" %></h3>
        </div>
        <div class="panel-body">
        <% @commented_restaurants.each do |restaurant| %>
          <%= link_to restaurant_path(restaurant) do %>
            <div class="my-restaurant">
              <div>
                <%= image_tag restaurant.image %>
              </div>
              <h5><%= restaurant.name %></h5>
            </div>
          <% end %>
        <% end %>
        </div>
      </div>

    </div>
  </div>
</div>